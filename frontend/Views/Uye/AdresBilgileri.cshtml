                            <div class="card-body text-secondary">

                                <p class="card-text">@adres.TamAd</p>
                                <p class="card-text">@adres.Adres</p>
                                <p class="card-text">@adres.AdresSehri</p>
                                <p class="card-text">@adres.AdresSehri</p>
                                <hr />
